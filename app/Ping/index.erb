<div data-role="page" data-theme="a">
<script type="text/javascript">
$(document).ready(function(){
var user_list=[];
$('.custom').change(function(){
 var checkbox_id=$(this).attr("id");
 var user_name=$('#'+checkbox_id).attr("name");
 user_list.push(user_name);
});
$('#ping_btn').click(function(){
  window.location.href='/app/Ping/ping_form?users='+user_list;
 });
});
</script>
	<div data-role="header" data-position="inline">
    <h1>Users Ping</h1>
     <a href="<%= Rho::RhoConfig.dashboard_path %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Back
     </a>
      
	</div>
 <div class="company_name"> <span>Crafted by:</span><i><a href="http://www.spritle.com/?ref=rhoconnect_monitor" target="_blank" style="color: #7CC4E7;text-decoration:none;"> Spritle software</a> </i></div>
  <div data-role="content">
       <form method="POST" action="">
      <div  data-role="fieldcontain">
        <b>Choose users to ping:</b>
        <fieldset data-role="controlgroup">
          <legend></legend>
          <%i=1%>
            <% @users.each do |user| %>
                <input type="checkbox" name="<%=user.user%>" id="checkbox-<%=i%>" class="custom" />
                  <label for="checkbox-<%=i%>"><%= user.user %></label>
                  <%i+=1%>
            <% end %>
          </fieldset>
       </div>
      <a herf="#" data-role="button" id="ping_btn">Ping</a>
       </form>
  </div>
  <div data-id="tabbar" data-role="footer" data-position="fixed" class="nav-cust">
       <div data-role="navbar" class="nav-cust" data-grid="b">
          <ul>
             <li><a href="<%= url_for :controller =>RhoMonitor ,:action => :dashboard %>" id="dashboard" data-icon="custom" >Dashboard</a></li>
             <li><a href="<%= url_for :action => :ping_user_refresh %>" id="refresh" data-icon="custom">Refresh</a></li>
             <li><a href="<%= url_for :controller =>RhoMonitor ,:action => :logout %>" id="logout" data-icon="custom">Logout</a></li>
         </ul>
       </div>
 </div>
</div>
