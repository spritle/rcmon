<div data-role="page"  class="type-interior" data-theme="a">

  <div data-role="header"  data-position="inline">
    <h1>Devices</h1>
    <a href="<%= url_for( :controller=>:Users,:action => :user_dashboard ,:query => {:user_name=> @params['user_name']} )%>" class="ui-btn-left" data-icon="back" data-direction="reverse" <%= "data-ajax='false'" if is_bb6 %>>
      Back
    </a>
    <a href="<%= url_for( :action => :new ,:query => {:name=> @params['user_name']} )%>" class="ui-btn-right" data-icon="plus">
      Create
    </a>
  </div>
      
  <div data-role="content">
      <ul data-role="listview" data-inset="true" data-theme="d" data-divider-theme="a">
        <li data-role="list-divider">Devices</li>
        <% @devices.each do |device| %>
          <li><a href="<%= url_for :action => :device_param , :query => {:device_name => device,:user_name=>@params['user_name']} %>"><%= device %></a></li>
          <% end %>
      </ul>
  </div>
  <div data-id="tabbar" data-role="footer" data-position="fixed" class="nav-cust">
    <div data-role="navbar" class="nav-cust" data-grid="b">
      <ul>
        <li><a href="<%= url_for :controller =>RhoMonitor ,:action => :dashboard %>" id="dashboard" data-icon="custom" >Dashboard</a></li>
        <li><a href="#" id="refresh" data-icon="custom">Refresh</a></li>
        <li><a href="<%= url_for :controller =>RhoMonitor ,:action => :logout %>" id="logout" data-icon="custom">Logout</a></li>
      
      </ul>
    </div>
  </div>
</div>
