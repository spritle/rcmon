<div data-role="page" data-theme="a">

  <div data-role="header" data-position="inline">
    <h1>Device Attributes</h1>
    <a href="<%= url_for( :action => :index ,:query => {:user_name=> @params['user_name']} )%>" class="ui-btn-left" data-icon="back" data-direction="reverse">
     Back
    </a>
    
  </div>
  <%i=true%>
  <div data-role="content" >
      <ul data-role="listview" data-inset="true" data-theme="d" data-divider-theme="a"> 
      <% @device_params.each do |params| %>
        <% if params['value'] && params['value']!=""%>
           <% if i%>
              <li data-role="list-divider"><%= params['value'] %></li>
              <%i=false%>
          <%else%>
            <li><%= params['name'] %> <span style="float:right"><%= params['value'] %></span></li>
          <%end%>
        <% end %>
      <% end %>
      <li>Delete device<span class="ui-li-aside"><a href="#" title="<%= @device_name %>" id="device_delete_btn"><img src="\public\images\rcm\delete.png" width="20" height="20"/></a></span></li>
      </ul>
      
  </div>
  <div data-id="tabbar" data-role="footer" data-position="fixed" class="nav-cust">
    <div data-role="navbar" class="nav-cust" data-grid="b">
      <ul>
        <li><a href="<%= url_for :controller =>RhoMonitor ,:action => :dashboard %>" id="dashboard" data-icon="custom" >Dashboard</a></li>
        <li><a href="<%= url_for :action => :device_params_refresh ,:query => {:device_name =>  @params['device_name'],:user_name=> @params['user_name']} %>" id="refresh" data-icon="custom">Refresh</a></li>
        <li><a href="<%= url_for :controller =>RhoMonitor ,:action => :logout %>" id="logout" data-icon="custom">Logout</a></li>
      
      </ul>
    </div>
  </div>
</div>