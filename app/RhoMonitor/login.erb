<div data-role="page" data-theme="a">
<script src="/public/js/login.js" type="text/javascript"></script>
  <div data-role="header" data-position="inline" >
    <h3 style="font-size:13.5px;">RhoConnect Monitor</h3>
  
  </div>

  <div data-role="content">
   
       <form>
         <div data-role="fieldcontain" >
           <label for="rho_monitor[url]" class="fieldLabel">Url</label>
           <input type="text" id="rho_monitor[url]" class="server_url" name="rho_monitor[url]" data-theme="c" value="http://"/>
         </div>
         <div data-role="fieldcontain"  >
            <label for="rho_monitor[login]" class="fieldLabel">Login</label>
            <input type="text" id="rho_monitor[login]" class="server_login" name="rho_monitor[login]" value="rhoadmin" data-theme="c" />
         </div>
         <div data-role="fieldcontain" >
             <label for="rho_monitor[password]" class="fieldLabel">Password</label>
             <input type="text" id="rho_monitor[password]" class="server_pwd" data-theme="c" name="rho_monitor[password]" <%= placeholder("Password") %> />
         </div>
         <a href="#" id="login_btn" data-role="button">Login</a>
       </form>
       <style type="text/css">

.fieldLabel{
  font-weight:bold !important;
}
</style>
