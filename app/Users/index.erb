<div data-role="page" data-theme="a">

  <div data-role="header" data-position="inline">
    <h1>Users</h1>
    <a href="<%= Rho::RhoConfig.dashboard_path %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
     Back
    </a>
    
  </div>
<div class="company_name"> <span>Crafted by:</span><i><a href="http://www.spritle.com/?ref=rhoconnect_monitor" target="_blank" style="color: #7CC4E7;text-decoration:none;"> Spritle software</a> </i></div>
  <div data-role="content" >
    <div  id="users_list">
      <% if @users.size != 0 %>
      <ul data-role="listview" data-inset="true" data-theme="a" data-divider-theme="d" data-split-theme="d">
     
      <% @users.each do |user| %>
          <li id="<%= user.object.to_s %>"><a href="<%=url_for :action => :user_dashboard,:query => {:user_name => user.user} %>">
            <img src="\public\images\rcm\User-blue-icon.png" height="75%" style="top:8px;"/>
           
            <h3 style="margin-top:20px !important;"><%= user.user %></h3>
            
            </a>
            <a href="#" id="user_delete" data-user="<%= user.user %>"  data-icon="custom" >
            Delete</a>
          </li>
      <% end %>
      </ul>
     <% end %>
  </div>
  </div>
<div data-id="tabbar" data-role="footer" data-position="fixed" class="nav-cust">

    <div data-role="navbar" class="nav-cust" data-grid="b">
      <ul>
        <li><a href="<%= url_for :controller =>RhoMonitor ,:action => :dashboard %>" id="dashboard" data-icon="custom">Dashboard</a></li>
       <li><a href="#" id="refresh" class="user_refresh" data-icon="custom" onClick="$.mobile.showPageLoadingMsg(); $.post('/app/Users/user_refresh');">Refresh</a></li>
        <li><a href="<%= url_for :controller =>RhoMonitor ,:action => :logout %>" id="logout" data-icon="custom">Logout</a></li>
      
      </ul>

    </div>
  </div>
</div>
