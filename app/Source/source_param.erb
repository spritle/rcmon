<div data-role="page" data-theme="a">
  
  <div data-role="header" data-position="inline">
    <h1>Source Attributes</h1>
    <a href="<%= url_for :action => :source_list ,:query => {:user_name =>@params['user_name']} %>" class="ui-btn-left" data-icon="back" >
     Back
    </a>
    <a href="<%= url_for :controller=>:RhoMonitor,:action => :logout %>" class="ui-btn-right" >
     Logout
    </a>
  </div>

  <div data-role="content" >
  
      <ul data-role="listview" data-inset="true" data-theme="c">
      <% @source_params.each do |params| %>
              <% if params['value'] && params['value']!=""%>
              <li><label class="fieldLabel"><%= params['name'] %></label>
              <label class="fieldLabel" style="text-align:center;">:</label>
              <label class="fieldLabel" style="float:right;"><%= params['value'] %></label></li>
              <% end %>
      <% end %>
    
       <% if @params['user_name']!="" %>
               <li>md:
                <a href="<%= url_for :action => :source_doc ,:query => {:doc =>@list_source_docs['md'],:source_name =>@params['source_name'],:user_name =>@params['user_name']} %>"><%= @list_source_docs['md'] %></a></li>
               <li>errors:
               <a href="<%= url_for :action => :source_doc ,:query => {:doc =>@list_source_docs['errors'],:source_name =>@params['source_name'],:user_name =>@params['user_name']} %>"><%= @list_source_docs['errors'] %></a></li>
               <li>md_copy:
                <a href="<%= url_for :action => :source_doc ,:query => {:doc =>@list_source_docs['md_copy'],:source_name =>@params['source_name'],:user_name =>@params['user_name']} %>"><%= @list_source_docs['md_copy'] %></a></li>
               <li>md_size:
                <a href="<%= url_for :action => :source_doc ,:query => {:doc =>@list_source_docs['md_size'],:source_name =>@params['source_name'],:user_name =>@params['user_name']} %>"><%= @list_source_docs['md_size'] %></a></li>
          
      <% end %>
   </ul>
  </div>
  <div data-id="tabbar" data-role="footer" data-position="fixed" class="nav-cust">
    <div data-role="navbar" class="nav-cust" data-grid="b">
      <ul>
        <li><a href="<%= url_for :controller =>RhoMonitor ,:action => :dashboard %>" id="dashboard" data-icon="custom">Dashboard</a></li>
        <li><a href="<%= url_for :action => :source_param_refresh ,:query => {:source_name =>@params['source_name'],:user_name =>@params['user_name'] } %>" id="refresh" data-icon="custom">Refresh</a></li>
        <li><a href="<%= url_for :controller =>RhoMonitor ,:action => :logout %>" id="logout" data-icon="custom">Logout</a></li>
      
      </ul>
    </div>
  </div>
</div>