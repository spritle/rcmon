<div data-role="page" data-theme="a">
  <div data-role="header" data-position="inline" data-theme="a">
    <h1>License Info</h1>
    <a href="<%= Rho::RhoConfig.dashboard_path %>" class="ui-btn-left" data-icon="back" >
     Back
    </a>
    <a href="<%= url_for :controller=>:RhoMonitor,:action => :logout %>" class="ui-btn-right" >
     Logout
    </a>
  </div>

  <div data-role="content" >
      <style>
       .box { width: 120px; height: 147px; float: left;  margin: 6px; color: #fff; text-shadow: 0 1px 0 #000; -webkit-border-radius: 6px; -moz-border-radius: 6px; border-radius: 6px; text-align: center;}
       .blue { background-color: #14AED5; }
       .green { background-color: #76DC00; }
       .box_title { width: 100%; height: 20px; padding-top: 2px;}
      </style>
    <% @Info.each do |info|%>    
		<div class="box blue">
			<div class="box_title green">Licensed To</div>
			<br /><%=info.license %>
		</div>
		<div class="box green">
			<div class="box_title blue">Available</div>
			<br /><%=info.available %>
		</div>
		<div class="box blue">
			<div class="box_title green">Total Devices</div>
			<br /><%= info.total%>
		</div>
		<div class="box green">
			<div class="box_title blue">Issued on</div>
			<br /><%= info.issued_date %>
		</div>
    <% end %>
  </div>
</div>

