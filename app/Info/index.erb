
<div data-role="page" data-theme="a">
    <script type="text/javascript">

      $(document).ready(function(){
         var used;
      used=<%= @Info[0].total %>-<%= @Info[0].available %>;
      var data = [
        ['Used Devices',  used],['Available Devices', <%= @Info[0].available %>]
      ];
      jQuery.jqplot ('container_info', [data], 
        { 
          seriesDefaults: {
            // Make this a pie chart.
            renderer: jQuery.jqplot.PieRenderer, 
            rendererOptions: {
              // Put data labels on the pie slices.
              // By default, labels show the percentage of the slice.
              showDataLabels: true
            }
          }
        }
      );
    });
     
    </script>
 
  <div data-role="header" data-position="inline" data-theme="a">
    <h1>Informations</h1>
    <a href="<%= Rho::RhoConfig.dashboard_path %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
     Back
    </a>
   
  </div>
 <div class="company_name"> <span>Crafted by:</span><i><a href="http://www.spritle.com/?ref=rhoconnect_monitor" target="_blank" style="color: #7CC4E7;text-decoration:none;"> Spritle software</a> </i></div><br/>
  <div data-role="content" >
 
    <!--Div that will hold the pie chart-->
   <div id="container_info" class="charts" style="height:30%;background-color:none !important;"></div>
     
  </div>
 
